import greenfoot.*;  // (World, Actor, GreenfootImage, Greenfoot and MouseInfo)
import java.util.*;
/**
 * Write a description of class UserInterface here.
 * 
 * @author (your name) 
 * @version (a version number or a date)
 */
public class UserInterface extends Actor
{
    
    Button start = new Button("Start Game!",30);
    Button addAlgae = new Button("Algae",30);
    MyWorld world;
    int foodEaten = 0;
   // IntroScreen intro;
    ArrayList <Actor> organisms = new ArrayList<Actor> ();
    static public ArrayList <Algae> plants = new ArrayList<Algae> (5);
    static public ArrayList <PlantEater> herbivores = new ArrayList<PlantEater> (5);
    static public ArrayList <MeatEater> carnivores = new ArrayList<MeatEater> (5);
    static public ArrayList <AnythingEater> omnivores = new ArrayList<AnythingEater> (5);
    
    public UserInterface(MyWorld w)
    {
        //setImage(new GreenfootImage("Click to start",30,Color.WHITE,Color.BLACK));
        //setImage(new GreenfootImage("hello",30,Color.WHITE,Color.BLACK));
        world = w;
        
    }
    
   public void act()
   {

       //gameStae = world.gamestae;
       if(world.gameState == 0){
         world.addObject(start,50,50);

         
  
        }
       if(world.gameState == 1){
           world.addObject(new SpawnButton("Add Algae", 20),10,20);
           for(int i = 0; i < 5; i++){
            
            plants.add(new Algae());
            world.addObject(new Algae(), Greenfoot.getRandomNumber(750), Greenfoot.getRandomNumber(600));
            herbivores.add(new PlantEater());
            world.addObject(new PlantEater(), Greenfoot.getRandomNumber(750), Greenfoot.getRandomNumber(600));
            omnivores.add(new AnythingEater());
            world.addObject(new AnythingEater(), Greenfoot.getRandomNumber(750), Greenfoot.getRandomNumber(600));
            carnivores.add(new MeatEater());
            world.addObject(new MeatEater(), Greenfoot.getRandomNumber(750), Greenfoot.getRandomNumber(600));
        }
        }
       if(world.gameState == 2){
          // addObject(new UserInterface(),10,20);
        }


    }
    
}
